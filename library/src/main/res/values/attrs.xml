<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PieChartView">
        <attr name="pcv_border_width" format="dimension"/>
        <attr name="pcv_border_color" format="color"/>
        <attr name="pcv_donut_ratio" format="float"/>
        <attr name="pcv_animation_type">
            <flag name="none" value="0" />
            <flag name="all_at_once" value="1" />
            <flag name="one_by_one" value="2" />
        </attr>
        <attr name="pcv_animation_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="BarChartView">
        <attr name="bcv_border_width" format="dimension"/>
        <attr name="bcv_border_color" format="color"/>
        <attr name="bcv_borders">
            <flag name="none" value="0" />
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
            <flag name="all" value="15" />
        </attr>
        <attr name="bcv_bar_outline_width" format="dimension"/>
        <attr name="bcv_bar_outline_color" format="color"/>
        <attr name="bcv_bar_corner_radius" format="dimension"/>
        <attr name="bcv_indicator_width" format="dimension"/>
        <attr name="bcv_indicator_color" format="color"/>
        <attr name="bcv_indicator_step" format="integer"/>
        <attr name="bcv_max_value" format="integer"/>
        <attr name="bcv_animation_type">
            <flag name="none" value="0" />
            <flag name="all_at_once" value="1" />
            <flag name="one_by_one" value="2" />
        </attr>
        <attr name="bcv_animation_duration" format="integer"/>
    </declare-styleable>

</resources>